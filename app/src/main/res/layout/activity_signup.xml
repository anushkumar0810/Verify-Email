<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/emailEt" android:hint="Email" android:inputType="textEmailAddress"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <EditText android:id="@+id/passwordEt" android:hint="Password" android:inputType="textPassword"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <Button android:id="@+id/signupBtn" android:text="Sign Up"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <TextView android:id="@+id/gotoLogin" android:text="Already have an account? Login"
        android:textColor="@color/purple_500" android:paddingTop="16dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>
